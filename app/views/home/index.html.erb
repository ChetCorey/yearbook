<!DOCTYPE html>
<html>
<head>
  <title>Yearbook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>

	<header>
	<h1>The Iron Yard <span>Academy</span></h1>
		<h2>Durham, NC</h2>
	</header>

	<section class="main">
		<div class="user-container"></div>
		<div class="directory-container"></div>
		<div class="form"></div>

		<script type="text/template" class="profile-template">
			<img src="<%%= user.image_uid %>" class="user-image">
				<dl class="user-details">
					<dt>Name:</dt> <dd><%%= user.name %></dd>
					<dt>Bio:</dt> <dd><%%= user.bio %></dd>
					<dt>Email:</dt> <dd><%%= user.email %></dd>
					<dt>Twitter:</dt> <dd><%%= user.twitter %></dd>
					<dt>Github:</dt> <dd><%%= user.github %></dd>
					<dt>LinkedIn:</dt> <dd><%%= user.linkedin %></dd>
					<dt>Course:</dt> <dd><%%= user.course %></dd>
					<dt>Role:</dt> <dd><%%= user.role %></dd>
					<dt>Cohort:</dt> <dd><%%= user.cohort %></dd>
				</dl>
		</script>
	
		<script type="text/template" class="directory-template">
			<div class="hover-tile-outer">
  				<div class="hover-tile-container">
    				<div class="hover-tile hover-tile-visible">
      					<img src="<%%= user.image_uid %>" class="user-image">
    				</div>
    				<div class="hover-tile hover-tile-hidden">
      					<h4><%%= user.name %></h4>
      						<ul class="user-details">
								<li><%%= user.course %></li>
								<li><%%= user.role %></li>
								<li><%%= user.cohort %></li>
							</ul>
    				</div>
  				</div>
			</div>
		</script>
	
		<script type="text/template" class="logIn-form"></script>
	
			<form class="form">
				<input class="input-box" placeholder="your email address" type="text" autofocus />
    	        <input class="input-box" placeholder="your name" type="text" />
    	        <button>submit</button>
    	    </form>
    	</script>

    </section>
</body>
</html>
